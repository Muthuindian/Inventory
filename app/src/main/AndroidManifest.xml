<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tech42.mari.inventorymanagement">

    <application android:name=".application.InventoryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="Inventory"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <categoryname android:name="android.intent.categoryname.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.UnitActivity" android:parentActivityName=".activity.MainActivity"
                  android:label="Add Unit">
        </activity>
        <activity android:name=".activity.CategoryActivity" android:parentActivityName=".activity.MainActivity"
                  android:label="Add Category">

        </activity>
    </application>

</manifest>